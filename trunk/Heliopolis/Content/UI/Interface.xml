<?xml version="1.0" encoding="utf-8" ?>
<Interface inherits="Heliopolis.Interface.InterfacePanelsHandler" theme="UITheme\SimpleLight\SimpleLight.xml">
  <Variables>
    <Variable name="buttonwidth" value="72"/>
    <Variable name="buttonpadding" value="15"/>
    <Variable name="buttonheight" value="30"/>
    <!-- screenwitdh and screenhieght are implicitly set -->
  </Variables>
  <Panels>
    <Panel id="TopMenuPanel" type="Heliopolis.UILibrary.UIPanel_Frame" position="top-left" x="0" y="0" width="screenwidth" height="24" layout="stack-horizontal">
      
    </Panel>

    <Panel id="RightMenuPanel" type="Heliopolis.UILibrary.UIPanel_Frame" position="top-right" x="-15" y="15" width="180" height="700" layout="stack-vertical">
      <Panels>
        <Panel id="JobButton" type="Heliopolis.UILibrary.UIPanel_Button" onClick="ClickMe" position="top-left" x="buttonpadding" y="buttonpadding" width="buttonwidth" height="buttonheight">
          <Text alignment="center">Jobs</Text>
        </Panel>

        <Panel id="StorageButton" type="Heliopolis.UILibrary.UIPanel_Button" onClick="ClickMe" position="top-left" x="buttonpadding" y="buttonpadding" width="buttonwidth" height="buttonheight">
          <Text alignment="center">Storage</Text>
        </Panel>
        
        <Panel id="BuildingsButton" type="Heliopolis.UILibrary.UIPanel_Button" position="top-left" x="buttonpadding" y="buttonpadding" width="buttonwidth" height="buttonheight">
          <Text alignment="center">Buildings</Text>
        </Panel>
      </Panels>

    </Panel>

  </Panels>
</Interface>

