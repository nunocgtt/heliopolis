<?xml version="1.0" encoding="utf-8" ?>
<world>

  <!-- All the resources and other items that can exist in the world -->
  <Item name="wood">
    <Weight>1</Weight>
    <Texture>wooditem</Texture>
    <Class>rawMaterial</Class>
  </Item>
  <Item name="stone">
    <Weight>1</Weight>
