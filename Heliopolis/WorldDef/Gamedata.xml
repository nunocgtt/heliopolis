  </Item>
  <Item name="summonstone">
    <Weight>1</Weight>
    <Texture>summonstone</Texture>
    <Class>summonerOnly</Class>
  </Item>
  <Item name="berry">
    <Weight>1</Weight>
    <Texture>berryitem</Texture>
    <Class>food</Class>
  </Item>

  <!-- All the varying jobs that can be performed on the game world -->
  <JobDefinition name="moving" type="unitInherited">
    <ActionTime>200</ActionTime>
  </JobDefinition>
  <JobDefinition name="moveitem" type="unitInherited">
    <ActionTime>200</ActionTime>
  </JobDefinition>
  <JobDefinition name="pickupitem" type="unitInherited">
    <ActionTime>200</ActionTime>
  </JobDefinition>
  <JobDefinition name="placeitem" type="unitInherited">
    <ActionTime>200</ActionTime>
  </JobDefinition>
  <JobDefinition name="mining" type="designated">
    <!-- The target tile must have the resource "stone" in it to take from -->
    <ActionTime>2000</ActionTime>
    <ProducesItem>rock</ProducesItem>
    <TargetTileResource>rock</TargetTileResource>
  </JobDefinition>
  <JobDefinition name="woodcutting" type="designated">
    <!-- The target tile must have the resource "wood" in it to take from -->
    <ActionTime>200</ActionTime>
    <ProducesItem>wood</ProducesItem>
    <TargetTileResource>wood</TargetTileResource>
  </JobDefinition>

  <!-- Might need to split off item construction as another type -->
  <JobDefinition name="construction" type="construct">
    <ActionTime>3000</ActionTime>
  </JobDefinition>

  <!-- might need to split off summoning as another type -->
  <JobDefinition name="minorSummoningImp" type="summon">
    <ActionTime>2000</ActionTime>
    <Produces>imp</Produces>
  </JobDefinition>
  <JobDefinition name="minorSummoningSkeleton" type="summon">
    <ActionTime>2000</ActionTime>
    <Produces>skeleton</Produces>
  </JobDefinition>

  <!-- All the mob types that inhabit the world -->
  <Actor name="dood">
    <Texture>dwarf1</Texture>
    <MovementSpeed>200</MovementSpeed>
    <Hitpoints>100</Hitpoints>
    <Property name="sleep" magnitude="1"/>
    <Property name="food"  magnitude="1"/>
    <Job>mining</Job>
    <Job>woodcutting</Job>
    <Job>transporting</Job>
    <Job>carpentry</Job>
    <Job>smith</Job>
    <Job>ResourceRefinement</Job>
  </Actor>
  <Actor name="skeleton">
    <Texture>skeleton</Texture>
    <MovementSpeed>200</MovementSpeed>
    <Hitpoints>150</Hitpoints>
    <Property name="mana" magnitude="1"/>
    <Property name="maintenance"  magnitude="1"/>
    <Job>mining</Job>
    <Job>woodcutting</Job>
    <Job>transporting</Job>
    <Job>fighting</Job>
    <Job>pickupitem</Job>
    <Job>moveitem</Job>
    <Job>placeitem</Job>
    <Job>construction</Job>
  </Actor>
  <Actor name="summoner">
    <Texture>summoner</Texture>
    <MovementSpeed>400</MovementSpeed>
    <Hitpoints>1000</Hitpoints>
    <Property name="food" magnitude="1"/>
    <Property name="sleep" magnitude="1"/>
    <Job>minorSummoningImp</Job>
    <Job>minorSummoningSkeleton</Job>
  </Actor>

